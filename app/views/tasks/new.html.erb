<h1>New Task</h1>

<%= form_with(model: @task) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :details %>
    <%= form.text_area :details, class:"form-control"  %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Task', class:"btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back to list', tasks_path %>
