<div class="container">
  <h1>My tasks</h1>
  <ul>
   <% @tasks.each do |task| %>
    <li><% if task.completed %>
      <i class="fa-regular fa-square-check"></i>
    <% else %>
        <i class="fa-regular fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task.id) %> - <%= link_to task_path(task.id), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Delete #{task.title}?" }, class: 'delete-task' do %>
    <i class="fa-solid fa-trash-can"></i>
    <% end %></li>
      <%= link_to 'New task', new_task_path%>
   <% end %>
  </ul>
</div>
